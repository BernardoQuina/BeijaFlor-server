// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum MainCategory {
  Flores
  Plantas
  Acessorios
  Ocasiao
  none
}

enum SubCategory {
  tipos
  arranjos
  cores
  estacao
  local
  caracteristicas
  vasos
  outros
  calendario
  cerimonias
  momentosEspeciais
  none
}

model User {
  id           String   @id @default(uuid())
  googleId     String?  @unique
  facebookId   String?  @unique
  email        String   @unique
  role         Role     @default(USER)
  passwordHash String?
  name         String
  photo        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String     @id @default(uuid())
  name        String     @unique
  description String
  images      String[]
  price       Float
  stock       Int        @default(0)
  active      Boolean    @default(true)
  categories  Category[]
  height      String?
  water       String?
  exposure    String?
  temperature String?
  lifespan    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Category {
  id           String       @id @default(uuid())
  mainCategory MainCategory
  subCategory  SubCategory
  name         String       @unique
  image        String
  products     Product[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
